{
  "name": "barebones-ghost",
  "version": "0.1.0",
  "description": "A barebones ghost theme using Bootstrap 4",
  "homepage": "https://cfralick.github.io/barebones-ghost",
  "keywords": [ "minimalist", "barebones", "minimal", "bootstrap", "Adobe fonts" ],
  "license": "BSD-2-Clause",
  "author": {
    "name": "Clint Fralick",
    "email": "cfralick@creeperengine.com",
    "url": "https://cfralick.github.io"
  },
  "bugs": {
    "url": "https://github.com/cfralick/barebones-ghost/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cfralick/barebones-ghost"
  },
  "config": {
    "css": "assets/css/barebones.css",
    "js": "assets/js/barebones.js"
  },
  "scripts": {
    "clean": "rm assets/{css,js}/*.min.{css,js}",
    "minify:css": "curl --connect-timeout 10 -L cssminifier.com/raw --data-urlencode \"input@${npm_package_config_css}\" -o ${npm_package_config_css/%.*/.min.css}",
    "minify:js": "curl --connect-timeout 10 -L -X POST javascript-minifier.com/raw --data-urlencode \"input@${npm_package_config_js}\" -o ${npm_package_config_js/%.*/.min.js}",
    "minify": "npm run minify:css; npm run minify:js",
    "zip": "zip -r ../${npm_package_name}.zip . --include=\"*.hbs\" --include=\"*.min.css\" --include=\"*.min.js\"",
    "build": "npm run minify; npm run zip"
  }
}
